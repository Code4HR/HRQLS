{
  "siteName": "Hercules Project: HRQLS",
  "databases": {
    "elasticsearch": {
      "url": "http://hercules.code4hr.org:33366/"
    }
  },
  "routes": {
    "get": [
      {
        "url": "/",
        "controller": "HRQLS\\Controllers\\Main::main"
      },
      {
        "url": "/crime",
        "controller": "HRQLS\\Controllers\\Crime\\Crime::main"
      },
      {
        "url": "/crime/Hampton",
        "controller": "HRQLS\\Controllers\\Crime\\Hampton::main"
      },
      {
        "url": "/crime/Hampton/{id}",
        "controller": "HRQLS\\Controllers\\Crime\\Hampton::get"
      },
      {
        "url": "/food/sanitation",
        "controller": "HRQLS\\Controllers\\Food\\Sanitation::main"
      },
      {
        "url": "/schools",
        "controller": "HRQLS\\Controllers\\Schools\\School::main"
      },
      {
        "url": "/schools/{id}",
        "controller": "HRQLS\\Controllers\\Schools\\School::get"
      }
    ]
  }
}
