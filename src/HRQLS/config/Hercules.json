{
  "siteName": "Hercules Project: HRQLS",
  "databases": {
    "elasticsearch": {
      "url": "http://localhost:9200"
    }
  },
  "routes": {
    "get": [
      {
        "url": "/",
        "controller": "HRQLS\\Controllers\\Main::main"
      },
      {
        "url": "/crime",
        "controller": "HRQLS\\Controllers\\Crime::main",
        "description": "Index crime endpoints available"
      },
      {
        "url": "/crime/",
        "controller": "HRQLS\\Controllers\\Crime::getAll",
        "description": "Index all crimes from all cities"
      },
      {
        "url": "/food/sanitation",
        "controller": "HRQLS\\Controllers\\Food\\Sanitation::main"
      }
    ]
  }
}
